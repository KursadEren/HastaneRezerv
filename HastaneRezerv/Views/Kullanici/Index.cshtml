<h1>View</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>KullaniciId</th>
            <th>AdSoyad</th>
            <th>TcNo</th>
            <th>UnvanId</th>
            <th>Sifre</th>
            <th>TekrarSifre</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody> <!-- Burada tbody etiketini ekledim -->
</table>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Sayfa yüklendiğinde GET isteği yap
        $.get("https://localhost:7266/api/Api", function (data) {
            // Gelen veriyi tabloya ekle
            data.forEach(function (item) {
                var row = `<tr>
                                   <td>${item.kullaniciId}</td>
                                   <td>${item.adSoyad}</td>
                                   <td>${item.tcNo}</td>
                                   <td>${item.unvanId}</td>
                                   <td>${item.sifre}</td>
                                   <td>${item.tekrarSifre}</td>
                                   <td>
                                       <a class="btn btn-primary" asp-action="Edit" asp-route-id="${item.kullaniciId}">Düzenle</a> |
                                       <a class="btn btn-info" asp-action="Details" asp-route-id="${item.kullaniciId}">Detaylar</a> |
                                       <a class="btn btn-danger" asp-action="Delete" asp-route-id="${item.kullaniciId}">Sil</a>
                                   </td>
                               </tr>`;
                $("tbody").append(row);
            });
        });
    });
</script>

