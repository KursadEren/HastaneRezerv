@model HastaneRezerv.Models.RandevuOlustur
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Sayfası</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-dark">
    @if (TempData["hata"] is not null)
    {
        <div class="alert alert-danger">@TempData["hata"]</div>
    }TarihSecenekleri
    <div class="container-fluid d-flex align-items-center justify-content-center " id="Container">
        <div class="content text-center d-flex align-items-center">
            <form class="form-form" method="post" asp-controller="Randevu" asp-action="OnlineRandevu">
              <div class="form-group mt-4 p-2 border border-light d">
                    <label asp-for="Doktor" class="control-label"></label>
                  <select asp-for="Doktor.DoktorId" asp-items="ViewBag.AdSoyadList" class="form-control"></select>
                    <span asp-validation-for="Doktor" class="text-danger"></span>
        </div>

                <div class="form-group mt-4 p-2  border border-light d">
                    <label for="Tarih" class="control-label"></label>
                    <select asp-for="Tarih" asp-items="ViewBag.TarihSecenekleri" class="form-control"></select>
                    <span for="Tarih" class="text-danger"></span>
                </div>

                
                <div class="form-group mt-4 p-2  ">
                    <button type="submit" class="btn  border border-light d">Devam Et</button>
                </div>
            </form>
        </div>
    </div>

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        #Container {
            margin-top:100px;
            padding:30px;
            width: 40%;
            height: 100v;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #333333; /* İsterseniz arka plan rengini değiştirebilirsiniz */
        }
        .form-group {
            width: 300px; /* Genişliği container'a göre ayarlayın */
        }

        .form-form {
            max-width: 300px; /* Formun maksimum genişliğini belirleyin */
            
        }
        label {
            color:white;
        }

        .btn{
            background-color:#33333;
            color:white;
        }
    </style>

</body>
</html>
