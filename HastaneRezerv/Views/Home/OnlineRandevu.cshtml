<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hastane Randevu Sistemi</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container text-center">
       <div class="col">
           <div class="container form-group mt-4 p-2 col-md-12">
                <h1>Hastane Randevu Sistemi</h1>
           <div id="randevu-saatleri"></div>
           </div>
        </div>
    </div>
<style>
    body {
    background:black;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    width:auto;
    height:auto;
}

.container {
    max-width: 800px;
    margin: 50px auto;
    padding: 20px;
    background-color: #f4f4f4;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h1 {
    text-align: center;
    color: #333;
}

#randevu-saatleri {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.randevu-saati {
    width: calc(33.33% - 10px);
    margin-bottom: 10px;
    padding: 10px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.randevu-dolu {
    background-color: #ff9999; /* Kırmızı arkaplan */
}

.randevu-saati:hover {
    background-color: #f0f0f0;
}

</style>

<script >
        document.addEventListener("DOMContentLoaded", function () {
            const randevuSaatleriDiv = document.getElementById("randevu-saatleri");

            // Simülasyon: 9:00 - 18:00 arasında her 10 dakikada bir randevu zamanı oluştur
            const baslangicSaat = 9;
            const bitisSaat = 18;

            for (let saat = baslangicSaat; saat < bitisSaat; saat++) {
                for (let dakika = 0; dakika < 60; dakika += 10) {
                    const randevuSaat = `${saat.toString().padStart(2, '0')}:${dakika.toString().padStart(2, '0')}`;
                    const randevuSaatDiv = document.createElement("div");
                    randevuSaatDiv.className = "randevu-saati";
                    randevuSaatDiv.innerText = randevuSaat;

                    // Burada tıklanan randevu saati ile ilgili bir işlem gerçekleştirebilirsiniz.
                    randevuSaatDiv.addEventListener("click", function () {
                        if (!randevuSaatDiv.classList.contains("randevu-dolu")) {
                            alert(`Randevu alındı: ${randevuSaat}`);
                        } else {
                            alert(`Bu randevu saati dolu. Lütfen başka bir saat seçin.`);
                        }
                    });

                    // Simülasyon: Rastgele dolu randevu saatleri
                    if (Math.random() < 0.3) {
                        randevuSaatDiv.classList.add("randevu-dolu");
                    }

                    randevuSaatleriDiv.appendChild(randevuSaatDiv);
                }
            }
        });



</script>
</body>
</html>
