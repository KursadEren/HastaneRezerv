@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            max-width: 300px;
            margin: 0 auto; /* Bu satırı ekleyerek card'ı ortala */
            text-align: center; /* İçerikleri ortala */
            height: 200px;
        }

        .button {
            border: none;
            background-color: white;
            cursor: pointer; /* İsteğe bağlı olarak ekleyebilirsiniz */
        }

        .card h4 {
            color: #333;
        }
    </style>
</head>
<body>

    <div class="container text-center mt-5">
        <div class="row">
            
                <div class="row d-flex flex-row justify-content-center">
                    <div class="col-md-6 mb-1">
                        <button class="card button" onclick="location.href='@Url.Action("OnlineRandevu", "Home")'">
                            <h4>ONLİNE RANDEVU</h4>
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-calendar-plus" viewBox="0 0 16 16">
                  <path d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7"/>
                  <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z"/>
                </svg>
                          
                        </button>
                    </div>

                    <div class="col-md-6 mb-1">
                        <button class="card button" onclick="location.href='@Url.Action("Doktorlarimiz", "Doktor")'">
                            <h4>DOKTORLARIMIZ</h4>
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
              <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5"/>
            </svg>
                            
                        </button>
                    </div>
                </div>
            
        </div>
    </div>

    <!-- Bootstrap JS ve Popper.js dosyaları (isteğe bağlı, modal vb. için gereklidir) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
