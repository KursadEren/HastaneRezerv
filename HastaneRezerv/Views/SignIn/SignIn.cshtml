@model HastaneRezerv.Models.Kullanici
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign in Sayfası</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-dark">
    @if (TempData["hata"] is not null)
    {
        <div class="alert alert-danger">@TempData["hata"]</div>
    }
    <div class="container-fluid d-flex align-items-center justify-content-center mb-5" id="Container">
        <div class="content text-center d-flex align-items-center">
            <form class="form-form" method="post" asp-controller="SignIn" asp-action="SignIn">
                <div class="column">
                    <div class="col-md-12">
                        <div class="form-group mt-3 p-2 border border-light">
                            <label asp-for="AdSoyad">Ad Soyad</label><br />
                            <input asp-for="AdSoyad" type="text"  class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group mt-3 p-2 border border-light">
                            <label asp-for="TcNo">T.C. No</label><br />
                            <input asp-for="TcNo"  type="text"  class="form-control">
                        </div>
                    </div>


                    <div class="col-md-12">
                        <div class="form-group mt-3 p-2 border border-light">
                            <label asp-for="Sifre">Şifre</label> <br />
                            <input asp-for="Sifre" type="text"  class="form-control">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group mt-3 p-2 border border-light">
                            <label asp-for="TekrarSifre">Tekrardan Şifre</label>  <br />
                            <input asp-for="TekrarSifre" type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="form-group mt-4 p-2">
                    <button type="submit" class="btn border border-light d">Kayıt ol</button>
                </div>
            </form>
        </div>
    </div>

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        #Container {
            margin-top: 100px;
            padding: 30px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #333333; /* İsterseniz arka plan rengini değiştirebilirsiniz */
        }

        .form-group {
            width: 100%; /* Genişliği 100% olarak ayarlayın */
        }

        .form-form {
            max-width: 600px; /* Formun maksimum genişliğini belirleyin */
        }

        label {
            color: white;
        }

        .btn {
            background-color: #33333;
            color: white;
        }
    </style>

</body>
</html>
