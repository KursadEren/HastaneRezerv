@model IEnumerable<HastaneRezerv.Models.Poliklinik>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.PoliklinikAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hastane.HastaneAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aktiflik.Durum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.PoliklinikAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hastane.HastaneAdi)
            </td>
             <td>
                    @Html.DisplayFor(modelItem => item.Aktiflik.Durum)
            </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PoliklinikId">Düzenle</a> |
                    <a class="btn btn-info " asp-action="Details" asp-route-id="@item.PoliklinikId">Detaylar</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PoliklinikId">Sil</a>
                    </td>
        </tr>
}
    </tbody>
</table>
